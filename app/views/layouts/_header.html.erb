<header> 

  <div style='width: 960px; margin: 0 auto;'>
    <% logo = image_tag("ideaware/misc/fh_logo.png", :alt => "Founders Hookup", 
                        :class => "fh_logo") %>
    <%= link_to logo, root_path %>

    <nav>
    <% if user_signed_in? %>
      <table border='0' style='background-color: transparent; margin: 0; padding: 0; display: inline;'>
        <tr style='background-color: transparent;'>
          <td class='signin_row'>
            <span class='header_username'>
              User: <%= current_user.email %>
            </span>
          </td>
          <td class='signin_row' rowspan='2'>
      <%#= image_tag "#{@_current_user.photo_url}", :alt => "#{@_current_user.given_name} #{@_current_user.surname}", :size => "40x40", :style => "display: inline; padding: 0;" %>
          </td>
        </tr>

        <tr style='background-color: transparent;'>
          <td class='signin_row'>
            <ul>
              <% unless params[:controller].eql?("devise/registrations") %>
                <li><%= link_to "Edit User", edit_user_registration_path %></li>
              <% end %>
              <li><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %></li>
              <li><%= link_to "About", "#" %></li>
            </ul>
          </td>
        </tr>
      </table>

    <% else %>
      <ul>
        <li><%= link_to "Sign In", new_user_session_path %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "About", "#" %></li>
      </ul>
    <% end %>
  </nav>
  </div> 
</header>

