<%= form_for :registration, :url => { :action => 'createbatch', :controller => 'registrations' } do |f| %>

  <table>
    <tr>
      <td class="apply_title">Accelerators</td>
      <td class="right">
        <% if @accelerators.any? %>
          <%= f.submit value='Submit Application', :class => "bigbutton", :title => "Email application to selected accelerators" %>
        <% else %>
          <%= f.submit value='Submit Application', :disabled => true, :class => "bigbutton" %>
        <% end %>
      </td>
    </tr>
    <!--tr>
      <td colspan=2 id="notice" class="apply_notice"><%#= notice %></td>
    </tr!-->
  </table>

  <div class="field">
    <% quid = nil %>
    <% if ! @questionnaire.nil? %>
      <% quid = @questionnaire.id %>
    <% end %>
    <%= hidden_field_tag 'quid', quid %>
  </div>

  <% if @accelerators.any? %>
  <table class="accel">
    <tr>
      <th class="index">
        <%= link_to 'Name', { :controller => "questionnaires", :action => "apply", :column => "name" }, :method => :get %>
      </th>
      <th class="index">
        <%= link_to 'Location', { :controller => "questionnaires", :action => "apply", :column => "city" }, :method => :get %>
      </th>
      <th class="index">
        <%= link_to 'Start Date', { :controller => "questionnaires", :action => "apply", :column => "startdate" }, :method => :get %>
      </th>
      <th class="index">
        <%= link_to 'Length', { :controller => "questionnaires", :action => "apply", :column => "length" }, :method => :get %>
      </th>
      <th class="index">
        Description
      </th>
      <th class="index center nowrap">
        <%= link_to 'Application', { :controller => "questionnaires", :action => "apply", :column => "duedate" }, :method => :get %>
        <br/>
        <%= link_to 'Due Date', { :controller => "questionnaires", :action => "apply", :column => "duedate" }, :method => :get %>
      </th>
      <th class="index center nowrap">
        <%= link_to 'Accept Late', { :controller => "questionnaires", :action => "apply", :column => "acceptlate" }, :method => :get %>
        <br/>
        <%= link_to 'Applications', { :controller => "questionnaires", :action => "apply", :column => "acceptlate" }, :method => :get %>
      </th>
      <th class="index center">Application<br/>Sent</th>
      <th class="index center">Apply<br/>Now</th>
    </tr>

    <% @accelerators.each do |accelerator| %>
    <tr>
      <td class="index">
        <%= link_to accelerator.to_s, accelerator.website, :title => accelerator.website, :target => "_blank" %>
      </td>
      <td class="index">
        <% if (accelerator.country.nil? || accelerator.country.empty?) %>
          <%= accelerator.city + ", " + accelerator.state %>
        <% else %>
          <%= accelerator.city + ", " + accelerator.state + ", " + accelerator.country %>
        <% end %>
      </td>
      <td class="index"><%= accelerator.startdate %></td>
      <td class="index"><span class="nowrap"><%= accelerator.length %> weeks</span></td>
      <td class="index description"><div class="info round">
        <%= accelerator.description %> ... <%= link_to " more", accelerator.website, :title => accelerator.website, :class => "more_link", :target => "_blank" %>
      </div></td>
      <td class="index center"><%= accelerator.duedate %></td>
      <td class="index center">
        <% if (accelerator.acceptlate.nil? || accelerator.acceptlate.empty?) %>
          No
        <% else %>
          <%= accelerator.acceptlate %>
        <% end %>
      </td>
      <td class="index center">
        <!-- don't need this column if email works? -->
        <%= Registration.getlastmatch(quid, accelerator.id) %>
      </td>
      <td class="index center">
        <%# if accelerator.acceptapp == "Yes" %>
          <%= check_box_tag "bx[" + accelerator.id.to_s + "]", "", false %>
        <%# end %>
      </td>
    </tr>
    <% end %> <!-- accelerators.each -->
  </table>
  <% end %> <!-- accelerators.any? -->

<% end %> <!-- form -->

