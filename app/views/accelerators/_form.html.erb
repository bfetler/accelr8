<%= javascript_include_tag "http://www.google.com/jsapi" %>
<%= javascript_include_tag "jqueryref" %>
<%= javascript_include_tag "accel" %>

<%= form_for(@accelerator) do |f| %>
  <% if @accelerator.errors.any? %>
    <div id="error_explanation" class="clear">
      <h3 class="required"><%= pluralize(@accelerator.errors.count, "error") %> prohibited this accelerator from being saved:</h3>

      <ul>
      <% @accelerator.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="clear span-18">
    <tr class="accel nomargin">
      <td><%= f.label :name %><span class="required">*</span></td>
      <td><%= f.text_field :name %></td>
      <td><%= f.label :season, "Season / Year" %></td>
      <td><%= f.text_field :season, :size => 20 %></td>
    </tr>
    <tr class="accel nomargin">
      <td><%= f.label :city %><span class="required">*</span></td>
      <td><%= f.text_field :city %></td>
      <td><%= f.label :state, "State or Province" %><span class="required">*</span></td>
      <td><%= f.text_field :state, :size => 20 %></td>
    </tr>
    <tr class="accel nomargin">
      <td><%= f.label :country %></td>
      <td><%= f.text_field :country, :size => 30 %></td>
    </tr>
  </table>
  <table class="clear span-18">
    <tr class="accel nomargin even">
      <td><%= f.label :website %><span class="required">*</span></td>
      <td colspan=3><%= f.text_field :website, :size => 46 %></td>
    </tr>
  </table>
  <table class="clear span-18">
    <tr class="accel nomargin">
      <td><%= f.label :startdate, "Start Date" %><span class="required">*</span></td>
      <td><%= f.date_select :startdate, options = { :start_year => Time.now.year }, :class => "nomargin" %></td>
      <td><%= f.label :length, "Length (weeks)" %><span class="required">*</span></td>
      <td><%= f.text_field :length, :size => 3 %></td>
    </tr>
    <tr class="accel nomargin">
      <td><%= f.label :duedate, "Application Due Date" %><span class="required">*</span></td>
      <td><%= f.date_select :duedate, options = { :start_year => Time.now.year }, :class => "nomargin" %></td>
      <td/>
      <td/>
    </tr>
  </table>
  <table class="clear span-18">
    <tr class="accel nomargin">
      <td><b>Contact:</b><span class="required"> </span></td>
      <td class="nowrap"><%= f.label :firstname, "First name" %><span class="required"> </span></td>
      <td><%= f.text_field :firstname, :size => 15 %></td>
      <td class="nowrap"><%= f.label :lastname, "Last name" %><span class="required">*</span></td>
      <td><%= f.text_field :lastname, :size => 15 %></td>
    </tr>
    <tr class="accel nomargin">
      <td/>
      <td><%= f.label :email %><span class="required">*</span></td>
      <td colspan=4><%= f.text_field :email, :size => 57 %></td>
    </tr>
  </table>
  <table class="clear span-18">
    <tr class="accel">
      <td><%= f.label :description, "Description: Please describe the accelerator in 2 - 3 sentences." %><span class="required">*</span></td>
    </tr>
    <tr class="accel">
      <td>
        <%= f.text_area :description, :id => "dtext", :class => "bigarea charcount maxchar300" %>
      </td>
      <td><span id="dtext_ct" class="span-4 small dtextpad"></span>
      </td>
    </tr>
  </table>
  <table class="clear span-18">
    <tr class="accel">
      <td>
        <%= f.label :acceptlate, "We will accept late applications (Yes / No / Explain):" %>
      </td>
      <td>
        <%#= f.check_box :acceptlate, {}, "Yes", "No" %>
        <%= f.text_field :acceptlate, :size => 30, :maxlength => 100 %>
      </td>
    </tr>
    <!--tr class="accel">
      <td><%#= f.label :acceptemail, "Application email address (if different from contact email):" %></td>
      <td><%#= f.text_field :acceptemail, :size => 30 %></td>
    </tr>
    <tr class="accel">
      <td>
        <b>We have read the
        <%#= link_to "Terms of Agreement", { :controller => "accelerators", :action => "terms" }, :method => :post %>
        , and</b>
        <%#= f.label :acceptapp, "will accept emailed applications from Founders Hookup:" %>
       </td>
      <td>
        <br/>
        <%#= f.check_box :acceptapp, {}, "Yes", "No" %>
      </td>
    </tr!-->
  </table>
  <%#= f.hidden_field :acceptapp, :value => "No" %> <!-- rm for testing -->
  <div class="actions clear span-4">
    <%= f.submit %>
  </div>
<% end %>
